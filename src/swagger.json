{
    "openapi": "3.0.0",
    "info": {
        "title": "Api de manipulação de animes/filmes",
        "description": "Esta api tem como objetivo manipular dados referentes a filmes e animes.",
        "termsOfService": "",
        "contact": {
            "email": "profile.caixeta99@gmail.com"
        },
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "http://localhost:8080/api/v1",
            "description": "Api de uso local"
        }
    ],
    "paths": {
        "/genres/": {
            "post": {
                "summary": "Cadastro de genero",
                "description": "Rota responsavel por realizar o cadastro de um novo genero na aplicação",
                "tags": [
                    "genres"
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/Genres"
                            },
                            "example": {
                                "name": "Ação"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Cadastro efetuado com sucesso!",
                        "content": {
                            "application/json": {
                                "example": {
                                    "mensagem": "O genero foi incluindo na base de dados do sistema"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Recurso não encontrado",
                        "content": {
                            "application/json": {
                                "example": {
                                    "mensagem": "O recursos solicitado não foi encontrado ou não esta disponivel no momento"
                                }
                            }
                        }
                    },
                    "409": {
                        "description": "Conflito com outro registro no sistemas",
                        "content": {
                            "application/json": {
                                "example": {
                                    "mensagem": "Foi encontrado um genero com o mesmo nome, que foi informado na requsição"
                                }
                            }
                        }
                    }
                }
            },
            "get": {
                "summary": "Buscando todos os generos cadastrados",
                "description": "Rota responsavel por realizar a busca de todos os generos cadastrados na aplicação",
                "tags": [
                    "genres"
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/Genres"
                                    }
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Recurso não encontrado",
                        "content": {
                            "application/json": {
                                "example": {
                                    "mensagem": "O recursos solicitado não foi encontrado ou não esta disponivel no momento"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/genres/search/": {
            "get": {
                "summary": "Buscando um unico genero",
                "description": "Rota responsavel por realizar a busca de um genero na aplicação, sendo necessario informar o 'name' do mesmo",
                "tags": [
                    "genres"
                ],
                "parameters": [
                    {
                        "name": "query",
                        "in": "query",
                        "description": "Nome de um genero cadastrado no banco de dados",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Genres"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Requisição inválida",
                        "content": {
                            "application/json": {
                                "example": {
                                    "mensagem": "Deve ser informado o nome de um genero, cadastrado no sistema"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Recurso não encontrado",
                        "content": {
                            "application/json": {
                                "example": {
                                    "mensagem": "O recursos solicitado não foi encontrado ou não esta disponivel no momento"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/genres/{id}": {
            "put": {
                "summary": "Alterando os dados de um genero",
                "description": "Rota responsavel por realizar a alteração das informações referente a um genero",
                "tags": [
                    "genres"
                ],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "Id do genero",
                        "required": true
                    }
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/Genres"
                            },
                            "example": {
                                "name": "Ação 2"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Edição realizada com sucesso",
                        "content": {
                            "application/json": {
                                "example": {
                                    "mensagem": "O genero sofreu alterações nos seus dados"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Requisição inválida",
                        "content": {
                            "application/json": {
                                "example": {
                                    "mensagem": "Deve ser informado o id de um genero, cadastrado no sistema"
                                }
                            }
                        }
                    }
                }
            },
            "delete": {
                "summary": "Deletando os dados de um genero",
                "description": "Rota responsavel por deletar os dados referentes a um genero",
                "tags": [
                    "genres"
                ],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "Id do genero",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Exclusão realizada com sucesso",
                        "content": {
                            "application/json": {
                                "example": {
                                    "mensagem": "O genero foi excluido da nossa base de dados"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Requisição inválida",
                        "content": {
                            "application/json": {
                                "example": {
                                    "mensagem": "Problemas ao tentar excluir um genero"
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "Genres": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string"
                    }
                }
            }
        }
    }
}